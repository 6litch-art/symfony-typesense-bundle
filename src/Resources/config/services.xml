<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <!-- @todo: Structure for multiserver configuration.. There will be multiple clients..  -->
        <service id="typesense_manager" alias="Typesense\Bundle\DBAL\TypesenseManager" />
        <service id="Typesense\Bundle\DBAL\TypesenseManager" public="true">
            <argument type="service" id="parameter_bag"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <!-- Abstract definition for client. -->
        <service id="typesense.client" class="Typesense\Bundle\Client\Connection" public="true"
                  abstract="true">
             <argument/> <!-- connection name -->
             <argument/> <!-- collection definition -->
             <argument type="service" id="parameter_bag"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <!-- Abstract definition for all generic finders. -->
        <service id="typesense.finder" class="Typesense\Bundle\ORM\CollectionFinder" public="true"
                 abstract="true">
            <argument type="service" id="typesense_manager"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument/> <!-- collection -->
        </service>

        <!-- Abstract definition for all specific finders. -->
        <service id="typesense.specific_finder" class="Typesense\Bundle\ORM\SpecificCollectionFinder"
                 public="true" abstract="true">
            <argument/> <!-- generic finder class -->
            <argument/> <!-- finder arguments -->
        </service>

        <service id="typesense.autocomplete_controller"
                 class="Typesense\Bundle\Controller\TypesenseAutocompleteController">
            <argument/> <!-- routes -->
        </service>

        <!-- doctrine -->
        <service id="typesense.listener.doctrine_indexer" class="Typesense\Bundle\EventListener\TypesenseIndexer">
            <argument type="service" id="typesense_manager"/>
            <tag name="doctrine.event_listener" event="postPersist" priority="500" connection="default"/>
            <tag name="doctrine.event_listener" event="postUpdate" priority="500" connection="default"/>
            <tag name="doctrine.event_listener" event="preRemove" priority="500" connection="default"/>
            <tag name="doctrine.event_listener" event="postRemove" priority="500" connection="default"/>
            <tag name="doctrine.event_listener" event="postFlush" priority="500" connection="default"/>
        </service>

        <!-- commands -->
        <service id="typesense.command.create" class="Typesense\Bundle\Command\CreateCommand" public="true">
            <tag name="console.command"/>
            <argument type="service" id="typesense_manager"/>
        </service>

        <service id="typesense.command.connection.test" class="Typesense\Bundle\Command\ConnectionTestCommand" public="true">
            <tag name="console.command"/>
            <argument type="service" id="typesense_manager"/>
        </service>

        <service id="typesense.command.import" class="Typesense\Bundle\Command\ImportCommand" public="true">
            <tag name="console.command"/>
             <argument type="service" id="typesense_manager"/>
        </service>
    </services>
</container>
